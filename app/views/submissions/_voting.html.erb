<div class="-ml-5 flex flex-col items-center text-center w-1/12">
	<% if user_signed_in? %>
		<%= button_to upvote_submission_path(submission), method: :put, class: 'px-3' do %>
			<%= render_svg 'icons/up-vote', styles: 'fill-current text-gray-500 w-4 h-4' %>
		<% end %>
		<span id="<%= dom_id(submission) %>_votes_count" class="text-gray-700 text-center block -mt-1"><%= submission.total_vote_count %></span>
		<%= button_to downvote_submission_path(submission), method: :put, class: 'px-3' do %>
			<%= render_svg 'icons/down-vote', styles: 'fill-current text-gray-500 w-4 h-4' %>
		<% end %>
	<% else %>
		<%= link_to new_user_session_path, class: 'px-3' do %>
			<%= render_svg 'icons/up-vote', styles: 'fill-current text-gray-500 w-4 h-4' %>
		<% end %>
		<span id="<%= dom_id(submission) %>_votes_count" class="text-gray-700 text-center block -mt-1"><%= submission.total_vote_count %></span>
		<%= link_to new_user_session_path, class: 'px-3' do %>
			<%= render_svg 'icons/down-vote', styles: 'fill-current text-gray-500 w-4 h-4' %>
		<% end %>
	<% end %>
</div>