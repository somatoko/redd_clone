<% content_for :community_label, "Edit community" %>

<% content_for :primary_content do %>
	<h1 class="text-2xl text-bold mb-6">Editing community</h1>
	<%= render "form", community: @community %>
<% end %>

<% content_for :secondary_content do %>
	<div class="py-6">
		<%= render_svg 'community', styles: 'max-w-full h-auto mb-4' %>
		<h3 class="font-bold">Edit the <%= @community.name %> community on Redd</h3>
		<p class="text-sm italic">Each community requires the following:</p>
		<ul class="mt-4 list-disc pl-3 leading-loose">
			<li>Name</li>
			<li>Title</li>
			<li>Description</li>
		</ul>
	</div>

	<ul>
		<li><%= link_to "Back to communities", communities_path, class: 'btn btn-indigo' %></li>
		<li><%= link_to "Show this community", @community %></li>
	</ul>
<% end %>

<%= render 'basic_layout' %>