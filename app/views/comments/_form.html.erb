<p class="text-sm text-gray-600 my-2">comment as <%= link_to current_user.username, profile_path(current_user), class: 'text-indigo-600 underline' %></p>

<%= form_with(model: [@submission, comment]) do |f| %>
	<%= f.text_area :reply, class: 'input min-h-[100px] resize-none', placeholder: 'What are your thoughts?' %>
	<%= f.submit class: 'btn btn-indigo text-base font-normal mt-4' %>
<% end %>