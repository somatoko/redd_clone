<%= turbo_stream.replace "#{dom_id(@community)}_subscribe" do %>
	<%= render 'subscriptions/actions', subscription: @subscription, community: @community, user: current_user %>
<% end %>

<%= turbo_stream.replace "#{dom_id(@community)}_subscriptions_count" do %>
	<span id="<%= dom_id(@community) %>_subscriptions_count">
		<%= @community.subscriptions.size %>
	</span>
<% end %>